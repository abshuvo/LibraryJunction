@page
@model LiteraryJunctionRazor.Pages.Categories.IndexModel

<div class="container">
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">
            CategoryList
        </h2>
    </div>

    <div class="col-6 text-end">
        <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> Create New Category
        </a>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                CategoryName
            </th>

            <th>
                DisplayOrder
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>

                <td>
                    <div class="w-75 btn-group " role="group">
                        <a asp-page="/Categories/Edit"  asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                        </a>

                            <a asp-page="/Categories/Delete"  asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i>Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
       
    </tbody>

</table>
</div>